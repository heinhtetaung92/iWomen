<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/competition_primary"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin" >

    <RelativeLayout
        android:id="@+id/layout_question"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:orientation="vertical" >

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/txt_competition_question"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Name of the game"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/competition_text" />


        </LinearLayout>



        <LinearLayout
            android:id="@+id/layout_group_name"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentRight="true"
            android:background="@drawable/competition_group_background"
            android:gravity="center"
            android:orientation="vertical" >

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/txt_competition_group_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Group 1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/competition_primary" />

        </LinearLayout>
    </RelativeLayout>

    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
        android:id="@+id/txt_competition_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/competition_vertical_margin"
        android:text="name of the game description here"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/competition_text" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp" >

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/competition_btn_count_down"
            android:gravity="center"
            android:orientation="vertical" >

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/txt_count_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/competition_primary" />

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/competition_day"
                android:textColor="@color/competition_primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/competition_btn_count_down"
            android:gravity="center"
            android:orientation="vertical" >

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/txt_count_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/competition_primary" />

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/competition_hour"
                android:textColor="@color/competition_primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginRight="5dp"
            android:background="@drawable/competition_btn_count_down"
            android:gravity="center"
            android:orientation="vertical" >

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/txt_count_minutes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/competition_primary" />

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/competition_minute"
                android:textColor="@color/competition_primary" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/competition_btn_count_down"
            android:gravity="center"
            android:orientation="vertical" >

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:id="@+id/txt_count_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:textColor="@color/competition_primary" />

            <org.undp_iwomen.iwomen.ui.widget.CustomTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:text="@string/competition_second"
                android:textColor="@color/competition_primary" />
        </LinearLayout>
    </LinearLayout>

    <org.undp_iwomen.iwomen.ui.widget.CustomTextView
        android:id="@+id/txt_competition_complete"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/competition_vertical_margin"
        android:text="@string/competition_compelete"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="@color/competition_text"
        android:visibility="gone" />

    <RelativeLayout
        android:id="@+id/layout_progress_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/competition_vertical_margin"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <ProgressBar
            android:id="@+id/txt_competition_progress"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:indeterminate="false"
            android:maxHeight="16dp"
            android:progress="80"
            android:progressDrawable="@drawable/competition_progressbar" />

        <org.undp_iwomen.iwomen.ui.widget.CustomTextView
            android:id="@+id/txt_competition_progress_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:text="5 Answers to Complete the Game"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/competition_text" />

    </RelativeLayout>

</LinearLayout>
