<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="org.undp_iwomen.iwomen.ui.activity.PostNewsActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="New Post"
            android:textSize="18sp"/>

        <EditText
            android:id="@+id/post_news_obj_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POO4"/>

        <EditText
            android:id="@+id/post_news_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TITLE1"/>

        <EditText
            android:id="@+id/post_news_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="POST CONTENT"/>

        <EditText
            android:id="@+id/post_news_img_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://i.imgur.com/ad7uSGY.png"/>

        <EditText
            android:id="@+id/post_news_content_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Letter"/>

        <EditText
            android:id="@+id/post_news_user_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="U001"/>

        <EditText
            android:id="@+id/post_news_user_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Khin"/>

        <EditText
            android:id="@+id/post_news_user_img_path"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="http://www.windowsegis.com/wp-content/uploads/2013/08/100-superb-windows-phone-wallpapers-to-mark-you-niftier-01.jpg"/>

        <EditText
            android:id="@+id/post_news_user_status"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="0"/>

        <EditText
            android:id="@+id/post_news_user_created_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sun Aug 02 18:07:00 GMT+06:30 2015"/>

        <EditText
            android:id="@+id/post_news_user_updated_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sun Aug 02 18:07:00 GMT+06:30 2015"/>

        <TextView
            android:id="@+id/post_news_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/accent"
            android:textColor="@android:color/white"
            android:text="POST"
            android:padding="8dp"
            android:gravity="center"/>

        </LinearLayout>

</RelativeLayout>


