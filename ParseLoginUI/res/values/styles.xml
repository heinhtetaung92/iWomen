<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="ParseLoginUI" />

    <style name="ParseLoginUI.Button" parent="@android:style/Widget.Button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">40dp</item>
        <item name="android:background">
            @drawable/com_parse_ui_parse_login_button_background_selector
        </item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="Spinner.TownshipInfo" parent="Widget.AppCompat.Spinner.Underlined">
        <item name="android:textColor">#444444</item>
    </style>

    <style name="SpinnerItem.TownshipInfo" parent="">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Subhead</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">8dp</item>
        <item name="android:textColor">#444444</item>
    </style>

    <style name="ParseLoginUI.Button.SignUp" parent="ParseLoginUI.Button">
        <item name="android:background">
            @drawable/com_parse_ui_parse_signup_button_background_selector
        </item>
    </style>

    <style name="ParseLoginUI.Button.ThirdPartyLogin" parent="ParseLoginUI.Button">
        <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">24dp</item>
    </style>

    <style name="ParseLoginUI.HelpButton" parent="@android:style/Widget.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">48dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">16dp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:textColor">@color/com_parse_ui_parse_login_help_button_label_selector</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ParseLoginUI.TextView" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/com_parse_ui_parse_login_display_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ParseLoginUI.EditText" parent="@android:style/Widget.EditText">
        <item name="android:singleLine">true</item>
        <item name="android:background">@drawable/abc_edit_text_material</item>
        <item name="android:textColorSecondary">@color/theme_accent_1</item>

    </style>

    <style name="ActionBarThemeOverlay" parent="">
        <item name="android:textColorPrimary">#fff</item>
        <item name="colorControlHighlight">#3fff</item>
    </style>

    <style name="ActionBarPopupThemeOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Caption" parent="">
        <item name="android:textAppearance">@style/TextAppearance.AppCompat.Caption</item>
        <item name="android:textColor">#989898</item>
    </style>
</resources>
